<%= form_with(model: link, url: user_links_path(current_user), local: true) do |form| %>
  <% if link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(link.errors.count, 'error') %> prohibited this link from being saved:</h2>

      <ul>
        <% link.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :long_url %>
    <%= form.text_field :long_url %>
  </div>

  <div class="field">
    <%= form.label :delete_at %>
    <%= form.datetime_select :delete_at, prompt: true, start_year: 2019, end_year: 2020 %>
  </div>

  <div class="field">
    <%= form.label :available_at %>
    <%= number_field_tag :seconds, nil, name: 'link[seconds]' %> seconds
  </div>

  <div class="actions">
    <%= form.submit 'Create Shorten Url' %>
  </div>
<% end %>
