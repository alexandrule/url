<h1>Links</h1>

<table>
  <thead>
  <tr>
    <th>Long url</th>
    <th>Short url</th>
    <th>Delete at</th>
    <th>Available At</th>
    <th></th>
    <th></th>
    <th></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @links.each do |link| %>
    <tr>
      <td><%= link_to link.long_url, link.long_url, target: '_blank' %></td>
      <td><%= link_to "#{request.base_url}/#{link.short_url}", go_path(link.short_url), target: '_blank' %></td>
      <td><%= link.delete_at %></td>
      <td><%= link.active? ? 'now' : link.available_at %></td>
      <td><%= link_to 'Visits', user_link_visits_path(link.user, link) %></td>
      <td><%= link_to 'Browsers', user_link_browsers_path(link.user, link) %></td>
      <td><%= link_to 'Devices', user_link_devices_path(link.user, link) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New link', new_user_link_path(current_user) %>
